<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginVertical="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_surah_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al-Fatihah  الفَاتِحة"
        android:textSize="23sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/text_ayah_quran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ ١"
        android:textSize="30sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_ayah_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Dengan menyebut nama Allah Yang Maha Pemurah lagi Maha Penyayang1."
        android:layout_marginTop="5dp"/>

</LinearLayout>